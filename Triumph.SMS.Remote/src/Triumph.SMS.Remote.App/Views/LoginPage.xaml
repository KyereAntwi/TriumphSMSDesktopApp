<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triumph.SMS.Remote.App.Views.LoginPage"
             xmlns:converters="clr-namespace:Triumph.SMS.Remote.App.Convertors"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:EnumerableToBoolConverter x:Key="EnumerableToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Centering container -->
        <Grid HorizontalOptions="Center"
              VerticalOptions="Center"
              RowDefinitions="Auto"
              ColumnDefinitions="Auto">

            <Border
                StrokeShape="RoundRectangle 12"
                StrokeThickness="0"
                BackgroundColor="White"
                Padding="24"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="360">
                <VerticalStackLayout Spacing="12"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Center">
                    <Label
                        Text="Login to your local account"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black"
                        Margin="0,0,0,6"/>

                    <Entry
                        Placeholder="Username"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding UserName, Mode=TwoWay}"/>

                    <Entry
                        Placeholder="Password"
                        IsPassword="True"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding Password, Mode=TwoWay}"/>

                    <Picker
                        Title="Select role for user portal"
                        FontAttributes="Bold"
                        ItemsSource="{Binding Roles}"
                        SelectedItem="{Binding SelectedRole}"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        BackgroundColor="Aqua"
                        IsVisible="{Binding Roles, Converter={StaticResource EnumerableToBoolConverter}}"
                        Margin="0,6,0,0"/>

                    <Button
                        Text="{Binding ButtonText}"
                        HorizontalOptions="Fill"
                        Margin="0,6,0,0"
                        IsEnabled="{Binding IsBusy}"
                        Command="{Binding LoginCommand}"/>
                    
                    <Button
                        x:Name="InitializeSchool"
                        Text="Perform School initialization"
                        IsVisible="{Binding IsFirstTime}"
                        Margin="0,6,0,0"
                        HorizontalOptions="Fill"
                        Command="{Binding InitializeSchoolCommand}"/>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>