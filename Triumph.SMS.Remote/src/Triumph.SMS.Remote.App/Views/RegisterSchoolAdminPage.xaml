<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triumph.SMS.Remote.App.Views.RegisterSchoolAdminPage"
             Title="{Binding Title}">
    <Grid>
        <!-- Centering container -->
        <Grid HorizontalOptions="Center"
              VerticalOptions="Center"
              RowDefinitions="Auto"
              ColumnDefinitions="Auto">
            <Border
                StrokeShape="RoundRectangle 12"
                StrokeThickness="0"
                BackgroundColor="White"
                Padding="24"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="360">
                <VerticalStackLayout Spacing="12"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Center">
                    <Label
                        Text="Register School Administrator and Accountant Account"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black"
                        Margin="0,0,0,6"/>
                    <Entry
                        Placeholder="First Name"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding FirstName, Mode=TwoWay}"/>
                    <Entry
                        Placeholder="Last Name"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding LastName, Mode=TwoWay}"/>
                    <Entry
                        Placeholder="Other Names"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding OtherNames, Mode=TwoWay}"/>
                    <Entry
                        Placeholder="Email"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding Email, Mode=TwoWay}"/>
                    <Entry
                        Placeholder="Username"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding Username, Mode=TwoWay}"/>
                    <Entry
                        Placeholder="Password"
                        IsPassword="True"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding Password, Mode=TwoWay}"/>
                    <Entry
                        Placeholder="Confirm Password"
                        IsPassword="True"
                        HorizontalOptions="Fill"
                        TextColor="Black"
                        Text="{Binding ConfirmPassword, Mode=TwoWay}"/>
                    <Button
                        Text="Register Administrator Account"
                        HorizontalOptions="Fill"
                        Margin="0,6,0,0"
                        Command="{Binding RegisterAdminCommand}"/>

                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>